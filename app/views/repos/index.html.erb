<p id="notice"><%= notice %></p>

<h1><%= "Listing Repos#{@term ? ' That Match "' : ''}#{@term ? @term + '"': ''}" %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Readme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repos.each do |repo| %>
      <tr>
        <td><%= repo.name %></td>
        <td><%= repo.description %></td>
        <td><%= markdown(repo.readme) %></td>
        <td><%= link_to 'Show', repo %></td>
        <td><%= link_to 'Edit', edit_repo_path(repo) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
